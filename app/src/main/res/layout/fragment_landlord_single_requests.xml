<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".landlord.LandlordSingleRequests">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Captcha"
        android:textSize="24dp"
        android:textColor="@color/black"
        />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="16dp"
       android:orientation="horizontal">
       <ImageView
           android:id="@+id/captcha_image"
           android:layout_width="0dp"
           android:layout_weight="6"
           android:layout_height="wrap_content"/>

       <TextView
           android:id="@+id/captcha_refresh"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:drawableStart="@drawable/ic_refresh_24"
           android:textSize="32dp"
           android:textColor="@color/black"
           android:drawableTint="@color/black"
           />

   </LinearLayout>

    <EditText
        android:id="@+id/captcha_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Captcha here"
        android:drawableEnd="@drawable/ic_edit_24"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/captcha_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Continue"
        android:drawableEnd="@drawable/ic_right_24"
        android:paddingHorizontal="16dp"
        android:background="@drawable/round_button"
        android:textColor="@color/white"
        android:drawableTint="@color/white"
        android:layout_gravity="end"
        />

</LinearLayout>