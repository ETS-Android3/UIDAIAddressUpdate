<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lender.LenderRequestsList">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lender_request_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/single_address_request_layout"/>

    <TextView
        android:id="@+id/no_address_request_text"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_height="match_parent"
        android:text="There is no address request for you"
        android:textSize="32dp"
        android:padding="16dp"/>
</FrameLayout>