<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_request_address_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:padding="16dp"
        android:drawableTop="@drawable/ic_right_24"
        android:text="Request Address to landlord"
        android:textAllCaps="false"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/view_requests_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:drawableTop="@drawable/ic_eye_24"
        android:padding="16dp"
        android:text="View Address requests"
        android:textAllCaps="false"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/main_request_address_button"
        app:layout_constraintTop_toTopOf="@+id/main_request_address_button" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/view_share_code_btn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:drawableTop="@drawable/ic_eye_24"
        android:padding="16dp"
        android:text="View Share Code"
        android:textAllCaps="false"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/view_requests_button"
        app:layout_constraintTop_toTopOf="@+id/view_requests_button" />
</androidx.constraintlayout.widget.ConstraintLayout>